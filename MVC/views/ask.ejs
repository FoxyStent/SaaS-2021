<!-- Form Page for question submitting -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#000000" />
    <meta name="description" content="Login/Signup for Ask me Anything App"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <title>Ask me Anything</title>
    <script type="text/javascript" src="/javascripts/askScripts.js"></script>

</head>
<body>
<div>
    <div role="navigation" class="navbar justify-content-around navbar-light bg-light shadow-sm">
        <a href="/"><img src="/logo192.png" width="75" height="75"></a>
        <h1 class="col-10 text-center">Ask me Anything!</h1>
        <div class="d-grid gap-1 col-1 me-3">
            <%if (isLogged) {%>
                <a class="btn btn-primary">My Profile</a>
            <%} else {%>
                <a href="/login" class="btn btn-primary">Log In</a>
            <%}%>
        </div>
    </div>
    <div class="container pb-5">
        <div>
            <div class="row justify-content-center align-items-center">
                <div class="col-5 mt-4">
                    <%if (!isLogged) {%>
                        <h6 class="text-center alert alert-danger">You have to be logged in to ask a question. <a href="/login">Log In</a> and try again</h6>
                    <%}%>
                </div>
            </div>
            <div class="shadow-lg w-75 m-auto p-4">
                <form>
                    <div class="form-group">
                        <h5 class="mb-2 mt-3">Question Title</h5>
                        <input class="form-control" id="title" placeholder="Your Question's Title"/>
                    </div>

                    <div class="form-group">
                        <h5 class="mb-2 mt-2">Your Question</h5>
                        <textarea rows=10 class="form-control" id="text" placeholder="Your Question"></textarea>
                    </div>

                    <div class="form-group">
                        <h5 class="mb-2 mt-2">Keywords</h5>
                        <input class="form-control" id="keywords" placeholder="Keywords" type="text"/>
                    </div>
                </form>

                <div class="row justify-content-center align-items-center mt-4">
                    <div class="col-auto">
                        <button <%if (!isLogged) {%>disabled=true<%}%> class="btn btn-primary" onclick="submitQuestion()">Submit</button>
                    </div>
                    <div class="col-auto">
                        <a class="btn btn-secondary" id='cancel' href="/">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>